<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      Formularz zawiera <%= @user.errors.count %> błędy.
    </div>
    <ul>
    <!-- Dodać potem tłumaczenie na polski - iteracja po numerach błędów -->
    <% @user.errors.full_messages.each do |msg| %> 
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>