<% provide(:title, "Edycja konta") %>

<h1>Edycja danych konta</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
      
      <%= f.label :name, "Imię" %>
      <%= f.text_field :name %>
      
      <%= f.label :surname, "Nazwisko" %>
      <%= f.text_field :surname %>

      <%= f.label :email, "E-mail:" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Hasło" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Potwierdź hasło" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Zapisz zmiany", class: "btn btn-large btn-primary" %>
      
      <%= link_to "Anuluj", current_user, class: "btn btn-large btn-secondary" %>
    <% end %>
    
  </div>
</div>